<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unive.dais.legodroid">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo_lego"
        android:label="ACGR Robotics"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".code.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".code.ChoiceModeActivity" />
        <activity android:name=".code.RulesActivity" />
        <activity android:name=".code.ManualActivity" />
        <activity
            android:name=".code.PopupConnectionActivity"
            android:theme="@style/AppTheme.Popup" />
        <activity android:name=".code.AutomaticActivity" />
        <activity android:name=".code.VirtualMapActivity" />
        <activity
            android:name=".code.PopupSavedMapsActivity"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".code.PopupScanningActivity"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".code.PopupErrorActivity"
            android:theme="@style/AppTheme.Popup" />
    </application>

</manifest>